{
    "env": {
        "node": true,
        "es2021": true,
        "browser": true,
        "commonjs": true
    },
    "parser": "@typescript-eslint/parser",
    "extends": "standard-with-typescript",
    "parserOptions": {
        "project": ["tsconfig.json"]
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "no-new": "off",
        "@typescript-eslint/naming-convention": "off"
    },
    "ignorePatterns": ["node_modules/**/*"]
}
