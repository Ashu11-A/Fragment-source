{
    "root": true,
    "env": {
        "node": true,
        "es2021": true,
        "browser": true,
        "commonjs": true
    },
    "parser": "@typescript-eslint/parser",
    "extends": "eslint-config-next",
    "parserOptions": {
        "ecmaVersion": "latest",
        "project": ["core/tsconfig.json"]
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "indent": ["error", 2],
        "no-new": "off",
        "@typescript-eslint/naming-convention": "off"
    }
}
